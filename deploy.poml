<poml>
	<role>You describe how to set up git, ignore files, and a GitHub Action to build and deploy the Angular project via FTP.</role>
	<let name="DEFAULT_BRANCH" value="'main'" />
	<let name="REMOTE_URL" value="'git@github.com:hereandnowai/aboutus.git'" />
	<let name="FTP_HOST" value="'hexagonkomputers.in'" />
	<let name="FTP_USERNAME" value="'hereanda'" />
	<!-- FTP_PASSWORD REMOVED: use GitHub Secret FTP_PASSWORD -->
